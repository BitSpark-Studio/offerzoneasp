@model OfferZoneAsp.Models.Offer

@{
    ViewData["Title"] = "Details - "+ Model.Title;
}

<!--Section: Block Content-->
<section class="mb-5">

    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">

            <div id="mdb-lightbox-ui"></div>

            <div class="mdb-lightbox">

                <div class="row product-gallery mx-1">

                    <div class="col-12 mb-0">
                        <figure class="view overlay rounded z-depth-1 main-img">
                            <a href="~/OfferImages/@Html.DisplayFor(model => model.OfferImageName)"
                               data-size="710x823">
                                <img style="width:50%" src="~/OfferImages/@Html.DisplayFor(model => model.OfferImageName)"
                                     class="img-fluid z-depth-1">
                            </a>
                        </figure>
                    </div>
                </div>

            </div>

        </div>
        <div class="col-md-6">

            <h5>@Html.DisplayFor(model => model.Title)</h5>
            <p class="mb-2 text-muted text-uppercase small">Category Name</p>
            <ul class="rating">
                <li>
                    <i class="far fa-star fa-sm text-primary"></i>
                    <i class="far fa-star fa-sm text-primary"></i>
                    <i class="far fa-star fa-sm text-primary"></i>
                    <i class="far fa-star fa-sm text-primary"></i>
                </li>
                
            </ul>
            <p><span class="mr-1"><strong>TK. @Html.DisplayFor(model => model.Price)</strong></span></p>
            <p class="pt-1">
                @Html.DisplayFor(model => model.Description)
            </p>
            <div class="table-responsive">
                <table class="table table-sm table-borderless mb-0">
                    <tbody>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.CreatedAt)</strong></th>
                            <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.ExpiredAt)</strong></th>
                            <td>@Html.DisplayFor(model => model.ExpiredAt)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.Location)</strong></th>
                            <td>@Html.DisplayFor(model => model.Location)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.WebsiteLink)</strong></th>
                            <td>@Html.DisplayFor(model => model.WebsiteLink)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.FbLink)</strong></th>
                            <td>@Html.DisplayFor(model => model.FbLink)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.TwitterLink)</strong></th>
                            <td>@Html.DisplayFor(model => model.TwitterLink)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>@Html.DisplayNameFor(model => model.InstagramLink)</strong></th>
                            <td>@Html.DisplayFor(model => model.InstagramLink)</td>
                        </tr>
                        <tr>
                            <th class="pl-0 w-25" scope="row"><strong>Posted By: </strong></th>
                            <td>@Html.DisplayFor(model => model.UserId)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="offset-md-6 col-md-6 col-sm-12">
            <form action="" id="usrform">
                <b>Name: </b><input type="text" class="form-control" name="usrname">

                <br>
                <textarea rows="4" cols="50" class="form-control" name="comment" form="usrform">
            Enter Comment here...</textarea>
                <br />
                
                <div class="form-group">
                    <input type="submit" value="Comment" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>

</section>
<!--Section: Block Content-->

<script>
    $(document).ready(function () {
        // MDB Lightbox Init
        $(function () {
            $("#mdb-lightbox-ui").load("mdb-addons/mdb-lightbox-ui.html");
        });
    });
</script>


<div>
    <a asp-action="Edit" asp-route-id="@Model.OfferId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
